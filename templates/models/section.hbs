<div class="ds-section {{container_class item}}" id="{{item.item_id}}">
  {{> ds-edit-bar}}
  {{#if item.style}}<div class="{{style_class item}}">{{/if}}
    {{#if item.title}}
      <div>
        <h1 class="ds-section-heading">{{item.title}}</h1>
        <hr/>
      </div>
    {{/if}}
    <div class="{{css_class item}}">
      {{#each item.items}}
        {{item this}}
      {{/each}}
    </div>
    {{#if item.style}}</div>{{/if}}
</div>
